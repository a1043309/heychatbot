     <div class="sign_container">
        <div class="py-5 text-center">
       <!--  <img class="d-block mx-auto mb-4" src="img/logo.png" alt="" width="72" height="72"> -->
        <h2 class="sign_title">歡迎加入Heychatbot</h2>
       </div>


        <div class="col-md-8 order-md-1">
          <h4 class="sign_sectitle">請填寫下列資料</h4>
          <form class="needs-validation" action="http://127.0.0.1:3000/doSignup" method="post"novalidate>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="sign_boxtitle">姓名</label>
                <input type="text" class="sign_form" name="name" placeholder="" value="" required>
                <div class="invalid-feedback">
                  請填寫有效的姓名
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label class="sign_boxtitle">帳號</label>
                <input type="text" class="sign_form" name="ID" placeholder="" value="" required>
                <div class="invalid-feedback">
                  請填寫有效的帳號
                </div>
              </div>
            </div>

              <div class="mb-3">
                <label class="sign_boxtitle">密碼</label>
                <input type="password" class="sign_form" name="pwd" placeholder="" required>
                <div class="invalid-feedback">
                  請填寫有效的密碼
                </div>
              </div>
              <div class="mb-3">
                <label class="sign_boxtitle">確認密碼</label>
                <input type="password" class="sign_form" name="pwd2" placeholder="" required>
                <div class="invalid-feedback">
                  請填寫正確的密碼
                </div>
              </div>

            <div class="mb-3">
              <label class="sign_boxtitle">電子信箱<span class="text-muted"></span></label>
              <input type="email" class="sign_form" name="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                請填寫一個有效的電子信箱
              </div>
            </div>

            <div class="mb-3">
              <label class="sign_boxtitle">生日</label>
              <input type="date" class="sign_form" name="birth" placeholder="" required>
              <div class="invalid-feedback">
                請填寫出生日期
              </div>
            </div>
            <div class="row">
              <div class="col-md-5 mb-3">
                <label class="sign_boxtitle">性別</label>
                <select class="sign_gender" name="gender" required>
                  　<option value="male">男生</option>
                  　<option value="female">女生</option>
                </select>
                <div class="invalid-feedback">
                  請選擇性別
                </div>
              </div>
            </div>


            <hr class="mb-4">
            <input class="sign_submit" type="submit" value="註冊">
          </form>
        </div>
    </div>
